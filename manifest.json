{
    "manifest_version": 3,
    "name": "Browser Extension Example",
    "description": "My very first browser extension.",
    "author": "John Doe",
    "version": "0.1",
    "permissions": [],
    "host_permissions": [
      "*://*/*"
    ],
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    }
  }